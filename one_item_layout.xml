<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/flight_expected_landing_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="expected" />

    <TextView
        android:id="@+id/flight_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/flight_expected_landing_time"
        android:layout_toRightOf="@id/flight_expected_landing_time"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="city" />

    <TextView
        android:id="@+id/flight_airport_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_city"
        android:layout_alignStart="@id/flight_city"
        android:layout_alignLeft="@id/flight_city"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#A9A9A9"
        android:textSize="14sp"
        tools:text="airport" />

    <ImageView
        android:id="@+id/flight_logo"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/flight_airport_name"
        android:layout_alignStart="@id/flight_airport_name"
        android:layout_alignLeft="@id/flight_airport_name"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:src="@drawable/british" />

    <TextView
        android:id="@+id/flight_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_airport_name"
        android:layout_toEndOf="@id/flight_logo"
        android:layout_toRightOf="@id/flight_logo"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="number" />

    <TextView
        android:id="@+id/landed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_toEndOf="@id/flight_number"
        android:layout_toRightOf="@id/flight_number"
        android:textColor="#32CD32"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="landed" />

    <TextView
        android:id="@+id/flight_real_landing_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/landed"
        android:layout_alignStart="@id/landed"
        android:layout_alignLeft="@id/landed"
        android:layout_marginTop="5dp"
        android:background="#32CD32"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="real" />

</RelativeLayout>